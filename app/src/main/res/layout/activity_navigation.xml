<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/LinearLayout_navigation_left_and_right"
        android:layout_marginRight="@dimen/LinearLayout_navigation_left_and_right"
        android:layout_marginTop="@dimen/LinearLayout_navigation_top"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/logo_obscura"
            android:layout_width="@dimen/logo_obscura_navigation_width"
            android:layout_height="@dimen/logo_obscura_navigation_height"
            android:layout_gravity="center"
            android:src="@mipmap/obscuro_launch" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/navigation_welcome_margin_top"
            android:text=" WELCOME TO OBSCURA "
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_welcome_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_text_top"
            android:fontFamily="sans-serif"
            android:textColor="@color/common_hint"
            android:textSize="@dimen/navigation_large_text_text_size"
            android:textStyle="normal"
            tools:text="Our application is a consulting service that allows you to quickly and easily obtain reliable and necessary information on any topic." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/already_have_an_account_top"
            android:fontFamily="sans-serif"
            android:textColor="@color/common_hint"
            android:textSize="@dimen/already_have_an_account_text_size"
            android:textStyle="normal"
            tools:text="Already have an account?" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_navigation_activity_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|bottom"
            android:text="sign in"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_signin_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/LinearLayout_navigation_signup_bottom_and_left_and_right"
        android:layout_marginLeft="@dimen/LinearLayout_navigation_signup_bottom_and_left_and_right"
        android:layout_marginRight="@dimen/LinearLayout_navigation_signup_bottom_and_left_and_right">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_navigation_activity_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|bottom"
            android:text="skip"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_skip"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_navigation_activity_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/navigation_signup_margin_top"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|bottom"
            android:text="sign up>"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_signup_text_size"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
